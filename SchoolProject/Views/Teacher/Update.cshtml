@model SchoolProject.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<div id="containershow">
    <h2>Update a Teacher</h2>
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back</a>
    </nav>
    <form method="Post" action="/Teacher/Update/@Model.TeacherId" onsubmit="return validateTeacher();">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFname" />
        </div>

        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLname" />
        </div>

        <div id="inputrow_hire">
            <label for="TeacherHireDate">Hire Date:</label>
            <input type="text" id="TeacherHireDate" name="TeacherHireDate" value="@Model.TeacherHireDate" />
        </div>

        <div id="inputrow_salary">
            <label for="TeacherSalary">Salary:</label>
            <input type="text" id="TeacherSalary" name="TeacherSalary" value="@Model.TeacherSalary" />
        </div>
        <div id="addbutton">
            <input id="buttonadd" type="submit" value="Update Teacher" />
        </div>
    </form>
</div>